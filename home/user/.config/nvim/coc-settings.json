{
	/*
	If coc-java stops working or java fails to start correctly, it has been helpful
	to delete the directory ~/.config/coc/extensions/coc-java-data and restart vim.
	*/
	"java.home": "/home/travis/java/jdk-11.0.1",
	"java.format.settings.url": "$HOME/Documents/projects/.java-format.xml",
	"java.referencesCodeLens.enabled": true,
	"java.trace.server": "verbose",
	"codeLens.enable": false,
	"languageserver": {
		"groovy": {
			"command": "java",
			"args": ["-jar", "$HOME/Documents/projects/groovy-language-server/build/libs/groovy-language-server-all.jar"],
			"filetypes": ["groovy"]
		}
	}
}
